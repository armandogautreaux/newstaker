<div class="jumbotrom-inner">
  <div class="jumbotrom-overlay">
    <div class="container text-center py-5">
      <h1 class="display-3 bold text-white cinzel mt-5 pt-5">SAVED ARTICLES</h1>
      <h2 class="text-light cinzel">YOUR SAVED ARTICLES</h2>
    </div>
  </div>
</div>


<div class="container-fluid">
  {{#each articles}}
  <div class="card my-3">
    <div class="card-header bg-primary montse text-white">
      <div class="row px-2">
        <a href="{{this.link}}" target="_blank" class="text-white mr-auto p-2">
          <h4>{{this.title}} </h4>
        </a>
        <btn class="btn btn-danger delete m-2" data-id="{{this._id}}">DELETE FROM SAVED</btn>
        <btn class="btn btn-success notetrigger m-2" data-toggle="modal" data-target="#exampleModal" data-id="{{this._id}}">ARTICLE
          NOTES</btn>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text">Summary: {{this.description}}</p>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center" id="exampleModalLabel">My Note</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="note">
            <div class="form-group row">
              <label for="staticEmail" class="col-sm-2 col-form-label"></label>
              <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="staticEmail" value="Article-Heading: {{this.title}}">
              </div>
            </div>
            <div class="for-group">

              <textarea class="form-control my-2 " name="" id="NoteTitle" cols="1" placeholder="Note Title"></textarea>
              <textarea class="form-control mb-3" name="" id="NoteBody" cols="30" rows="10" placeholder="Text"></textarea>
            </div>
            <input type="hidden" id="noteid" value="{{this.id}}">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </form>
        </div>

      </div>
    </div>
  </div>

  {{/each}}
</div>