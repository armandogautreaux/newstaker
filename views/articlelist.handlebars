<div class="jumbotrom-inner">
  <div class="jumbotrom-overlay">
    <div class="container text-center py-5">
      <h1 class="display-3 bold text-white cinzel mt-5 pt-5">MONGO SCRAPER</h1>
      <h2 class="text-light cinzel">New York Times Edition</h2>
    </div>
  </div>
</div>

<div class="container-fluid">
  {{#each articles}}
  <div class="card my-3">
    <div class="card-header bg-primary montse text-white">
      <div class="row">
        <h5 class="mr-auto">{{this.title}} </h5>
        <btn class="btn btn-success save" data-id="{{this._id}}">SAVE ARTICLE</btn>
      </div>
    </div>
    <div class="card-body">
      <p class="card-text">{{this.description}}</p>
    </div>
  </div>
  {{/each}}
</div>